<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="ScriptsSettings.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ScriptsSettings"
    xmlns:ext="using:ScriptsExtension"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Scripts Settings">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid>

        <Grid.Resources>
            <ResourceDictionary>

                <DataTemplate 
                    x:Key="DirectoryListViewTemplate" 
                    x:DataType="ext:ScriptDirectoryInfo">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <FontIcon
                            Grid.RowSpan="2"
                            Width="32"
                            Height="32"
                            Margin="6"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Glyph="📁"
                            FontFamily="Segoe UI Emoji"
                            Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}" />
                        <TextBlock Grid.Column="1"
                            Text="{x:Bind PathName, Mode=OneWay}"
                            x:Phase="1"
                            Style="{ThemeResource BaseTextBlockStyle}"
                            Margin="12,6,0,0"/>
                        <TextBlock  Grid.Column="1"
                            Grid.Row="1"
                            Text="{x:Bind FullPath}"
                            x:Phase="2"
                            Style="{ThemeResource BodyTextBlockStyle}"
                            Margin="12,0,0,6"/>
                        <Button Grid.Column="2"
                            Grid.RowSpan="2"
                            Height="32"
                            Margin="2"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Click="OpenDirectory_Click"
                            ToolTipService.ToolTip="Open directory"
                            Background="Transparent"
                            BorderThickness="0">
                            <FontIcon
                                FontFamily="Segoe Fluent Icons"
                                Glyph="&#xE838;"
                                FontSize="16"/>
                        </Button>
                    </Grid>
                </DataTemplate>


                <DataTemplate 
                    x:Key="ScriptListViewTemplate" 
                    x:DataType="ext:ScriptMetadata">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <!--<FontIcon
                            Grid.RowSpan="2"
                            Width="32"
                            Height="32"
                            Margin="6"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Glyph="📁"
                            FontFamily="Segoe UI Emoji"
                            Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}" />-->
                        <TextBlock Grid.Column="1"
                            Text="{x:Bind Title, Mode=OneWay}"
                            x:Phase="1"
                            Style="{ThemeResource BaseTextBlockStyle}"
                            Margin="12,6,0,0"/>
                        <TextBlock  Grid.Column="1"
                            Grid.Row="1"
                            Text="{x:Bind Description}"
                            x:Phase="2"
                            Style="{ThemeResource BodyTextBlockStyle}"
                            Margin="12,0,0,6"/>
                        <Button Grid.Column="2"
                            Grid.RowSpan="2"
                            
                            Height="32"
                            Margin="2"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Click="OpenScriptFile_Click"
                            ToolTipService.ToolTip="Open script file"
                            Background="Transparent"
                            BorderThickness="0">
                            <FontIcon
                                FontFamily="Segoe Fluent Icons"
                                Glyph="&#xE8E5;"
                                FontSize="16"/>
                        </Button>

                        <Button Grid.Column="3"
                            Grid.RowSpan="2"
                            Height="32"
                            Margin="2"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Click="OpenScriptDirectory_Click"
                            ToolTipService.ToolTip="Open directory"
                            Background="Transparent"
                            BorderThickness="0">
                            <FontIcon
                                FontFamily="Segoe Fluent Icons"
                                Glyph="&#xE838;"
                                FontSize="16"/>
                        </Button>
                    </Grid>
                </DataTemplate>
            </ResourceDictionary>
        </Grid.Resources>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="20" VerticalAlignment="Stretch">
            <TextBlock Text="Commands" FontSize="28" FontWeight="Bold" Margin="0,0,0,20"/>
            <!--<Button Content="Add directory" Width="150" Height="40" Margin="0,0,0,20"/>-->
            <ListView 
                      ItemsSource="{x:Bind ViewModel.Commands, Mode=OneWay}"
                      ItemTemplate="{StaticResource ScriptListViewTemplate}"/>
        </StackPanel>
        <StackPanel Grid.Column="1" Margin="20" VerticalAlignment="Stretch">
            <TextBlock Text="Directories" FontSize="28" FontWeight="Bold" Margin="0,0,0,20"/>
            <Button Content="Add directory" Width="150" Height="40" Margin="0,0,0,20"/>
            <ListView Height="300" 
                      ItemsSource="{x:Bind ViewModel.Directories, Mode=OneWay}"
                      ItemTemplate="{StaticResource DirectoryListViewTemplate}"/>
        </StackPanel>
    </Grid>
</Window>
