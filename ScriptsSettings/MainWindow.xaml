<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="ScriptsSettings.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ScriptsSettings"
    xmlns:ext="using:ScriptsExtension"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"


    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Scripts Settings">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid>

        <Grid.Resources>
            <ResourceDictionary>
                
                <CollectionViewSource x:Name="GroupedCommandsSource" x:Key="GroupedCommandsSource" 
                                      Source="{x:Bind ViewModel.Packages, Mode=OneWay}"
                                      IsSourceGrouped="True"
                                      ItemsPath="Commands"/>

                <DataTemplate
                    x:Key="DirectoryListViewTemplate" 
                    x:DataType="ext:ScriptDirectoryInfo">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <FontIcon
                            Grid.RowSpan="2"
                            Width="32"
                            Height="32"
                            Margin="6"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Glyph="ðŸ“"
                            FontFamily="Segoe UI Emoji"
                            Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}" />
                        <TextBlock Grid.Column="1"
                            Text="{x:Bind PathName, Mode=OneWay}"
                            x:Phase="1"
                            Style="{ThemeResource BaseTextBlockStyle}"
                            Margin="12,6,0,0"/>
                        <TextBlock  Grid.Column="1"
                            Grid.Row="1"
                            Text="{x:Bind FullPath}"
                            x:Phase="2"
                            Style="{ThemeResource BodyTextBlockStyle}"
                            Margin="12,0,0,6"/>
                        <Button Grid.Column="2"
                            Grid.RowSpan="2"
                            Height="32"
                            Margin="2"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Click="OpenDirectory_Click"
                            ToolTipService.ToolTip="Open directory"
                            Background="Transparent"
                            BorderThickness="0">
                            <FontIcon
                                FontFamily="Segoe Fluent Icons"
                                Glyph="&#xE838;"
                                FontSize="16"/>
                        </Button>
                    </Grid>
                </DataTemplate>


                <DataTemplate 
                    x:Key="ScriptListViewTemplate" 
                    x:DataType="ext:ScriptMetadata">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <local:IconBox
                            Grid.Column="0"
                            Grid.RowSpan="2"
                            Width="16"
                            Height="16"
                            Margin="4,0,0,0"
                            HorizontalAlignment="Left"
                            SourceKey="{x:Bind IconInfo}"
                            SourceRequested="{x:Bind local:IconCacheProvider.SourceRequested}" />
                    
                        <TextBlock Grid.Column="1"
                            Text="{x:Bind Title, Mode=OneWay}"
                            x:Phase="1"
                            Style="{ThemeResource BaseTextBlockStyle}"
                            Margin="12,6,0,0"/>
                        <TextBlock  Grid.Column="1"
                            Grid.Row="1"
                            Text="{x:Bind Description}"
                            x:Phase="2"
                            Style="{ThemeResource BodyTextBlockStyle}"
                            Margin="12,0,0,6"/>
                        <Button Grid.Column="2"
                            Grid.RowSpan="2"
                            
                            Height="32"
                            Margin="2"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Click="OpenScriptFile_Click"
                            ToolTipService.ToolTip="Open script file"
                            Background="Transparent"
                            BorderThickness="0">
                            <FontIcon
                                FontFamily="Segoe Fluent Icons"
                                Glyph="&#xE8E5;"
                                FontSize="16"/>
                        </Button>

                        <Button Grid.Column="3"
                            Grid.RowSpan="2"
                            Height="32"
                            Margin="2"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Click="OpenScriptDirectory_Click"
                            ToolTipService.ToolTip="Open directory"
                            Background="Transparent"
                            BorderThickness="0">
                            <FontIcon
                                FontFamily="Segoe Fluent Icons"
                                Glyph="&#xE838;"
                                FontSize="16"/>
                        </Button>
                    </Grid>
                </DataTemplate>

                <DataTemplate x:Key="PackageTemplate" x:DataType="local:Package">
                    <muxc:TreeViewItem ItemsSource="{x:Bind Commands, Mode=OneWay}" IsExpanded="True">
                        <StackPanel>
                            <!--<TextBlock Text="{x:Bind Title}" />-->
                            <TextBlock Text="{x:Bind Name}" />
                            <TextBlock Text="" />
                            <!--<TextBlock Text="{x:Bind Description}" />-->
                            <TextBlock Text="{x:Bind NumCommands, Mode=OneWay}" />
                        </StackPanel>
                    </muxc:TreeViewItem>
                </DataTemplate>
                
                <DataTemplate x:Key="ScriptTreeTemplate" x:DataType="ext:ScriptMetadata">
                    <muxc:TreeViewItem>
                        <TextBlock Text="{x:Bind Title}" />
                    </muxc:TreeViewItem>
                </DataTemplate>

                <local:PackageTreeTemplateSelector x:Key="PackageTreeTemplateSelector"
                    PackageTemplate="{StaticResource PackageTemplate}"
                    CommandTemplate="{StaticResource ScriptTreeTemplate}" />

            </ResourceDictionary>
        </Grid.Resources>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="4*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Margin="20" VerticalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Text="Commands" FontSize="28" FontWeight="Bold" Margin="0,0,0,20"/>
            
            <ListView Grid.Row="1"
                      x:Name="CommandsListView"
                      ItemsSource="{x:Bind GroupedCommandsSource.View, Mode=OneWay}"
                      ItemTemplate="{StaticResource ScriptListViewTemplate}"
                      SelectionMode="Single"
                      SelectionChanged="CommandsListView_SelectionChanged">
                <ListView.GroupStyle>
                    <GroupStyle>
                        <GroupStyle.HeaderTemplate>
                            <DataTemplate x:DataType="local:Package">
                                <Grid Margin="0,10,0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="1" 
                                               Text="{x:Bind Name}" 
                                               FontSize="20" 
                                               FontWeight="SemiBold"
                                               Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                                    <TextBlock Grid.Column="2" 
                                               Text="{x:Bind NumCommands}" 
                                               FontSize="14" 
                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                               VerticalAlignment="Bottom"
                                               Margin="10,0,0,2"/>
                                </Grid>
                            </DataTemplate>
                        </GroupStyle.HeaderTemplate>
                    </GroupStyle>
                </ListView.GroupStyle>
            </ListView>
        </Grid>
        <StackPanel Grid.Column="1" Margin="20" VerticalAlignment="Stretch">
            <TextBlock Text="Script Content" FontSize="28" FontWeight="Bold" Margin="0,0,0,20"/>
            <ScrollViewer Height="400" ZoomMode="Disabled" HorizontalScrollMode="Auto" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <TextBlock x:Name="ScriptContentTextBlock"
                           FontFamily="Consolas, Courier New, monospace"
                           FontSize="12"
                           Text="Select a command to view its content"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                           TextWrapping="NoWrap"/>
            </ScrollViewer>
        </StackPanel>
        <StackPanel Grid.Column="2" Margin="20" VerticalAlignment="Stretch">
            <TextBlock Text="Directories" FontSize="28" FontWeight="Bold" Margin="0,0,0,20"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                <Button Content="Add directory" Width="150" Height="40" Margin="0,0,10,0" Click="AddDirectory_Click"/>
                <Button x:Name="RemoveDirectoryButton" 
                        Content="Remove directory" 
                        Width="150" 
                        Height="40" 
                        Click="RemoveDirectory_Click"
                        Visibility="Collapsed"/>
            </StackPanel>
            <ListView x:Name="DirectoriesListView"
                      Height="300"
                      ItemsSource="{x:Bind ViewModel.Directories, Mode=OneWay}"
                      ItemTemplate="{StaticResource DirectoryListViewTemplate}"
                      SelectionMode="Single"
                      SelectionChanged="DirectoriesListView_SelectionChanged"/>
            <TextBlock Text="Directories will be watched for changes and hot-reloaded into Command Palette automatically" TextWrapping="WrapWholeWords" Margin="0,0,0,20"/>

        </StackPanel>
    </Grid>
</Window>
